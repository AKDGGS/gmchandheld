<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical"
    app:backgroundTint="@color/colorPrimary"
    tools:context=".GetToken"
    android:id="@+id/GetToken">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Please enter your personal access token"
        android:textColor="#ff353535"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:weightSum="8">

        <EditText
            android:id="@+id/apiTokenET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="7"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:text=""
            android:selectAllOnFocus="true"
            android:nextFocusDown="@+id/apiTokenET"
            android:nextFocusUp="@+id/apiTokenET"
            android:nextFocusLeft="@+id/apiTokenET"
            android:nextFocusRight="@+id/apiTokenET"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/cameraBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:drawableBottom="@drawable/ic_scanner_qr"
            android:nextFocusDown="@+id/cameraBtn"
            android:nextFocusUp="@+id/cameraBtn"
            android:nextFocusLeft="@+id/cameraBtn"
            android:nextFocusRight="@+id/cameraBtn"
            android:layout_marginEnd="5dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:minWidth="40dip"
            android:minHeight="40dip"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:text="@string/submit"
            android:textSize="12sp"
            android:textStyle="bold"
            android:nextFocusDown="@+id/submitBtn"
            android:nextFocusUp="@+id/submitBtn"
            android:nextFocusLeft="@+id/submitBtn"
            android:nextFocusRight="@+id/submitBtn"/>

    </RelativeLayout>
</LinearLayout>