<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:id="@+id/auditLayout">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/remark"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_weight="2" />

        <EditText
            android:id="@+id/remarkET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.75"
            android:inputType="text"
            android:paddingLeft="16dp"
            app:backgroundTint="@color/colorPrimary"
            android:selectAllOnFocus="true"
            android:nextFocusDown="@+id/remarkET"
            android:nextFocusUp="@+id/remarkET"
            android:nextFocusLeft="@+id/remarkET"
            android:nextFocusRight="@+id/remarkET"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/cameraBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1.25"
            android:drawableBottom="@drawable/ic_scanner_qr"
            android:nextFocusDown="@+id/cameraBtn"
            android:nextFocusUp="@+id/cameraBtn"
            android:nextFocusLeft="@+id/cameraBtn"
            android:nextFocusRight="@+id/cameraBtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:paddingTop="10dp"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:text="@string/item"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/itemET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5.25"
            android:inputType="text"
            app:backgroundTint="@color/colorPrimary"
            android:selectAllOnFocus="true"
            android:nextFocusDown="@+id/itemET"
            android:nextFocusUp="@+id/itemET"
            android:nextFocusLeft="@+id/itemET"
            android:nextFocusRight="@+id/itemET"/>

        <Button
            android:id="@+id/itemCameraBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1.25"
            android:drawableBottom="@drawable/ic_scanner_qr"
            android:nextFocusDown="@+id/itemCameraBtn"
            android:nextFocusUp="@+id/itemCameraBtn"
            android:nextFocusLeft="@+id/itemCameraBtn"
            android:nextFocusRight="@+id/itemCameraBtn"/>

        <Button
            android:id="@+id/addContainerBtn"
            android:layout_width="0dp"
            android:layout_weight="1.75"
            android:layout_height="44dp"
            android:text="@string/add"
            android:textSize="10sp"
            android:nextFocusDown="@+id/addContainerBtn"
            android:nextFocusUp="@+id/addContainerBtn"
            android:nextFocusLeft="@+id/addContainerBtn"
            android:nextFocusRight="@+id/addContainerBtn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:paddingTop="10dp"
        android:weightSum="10" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginTop="10dp"
            android:text="@string/number_of_items_added"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/auditCountTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:selectAllOnFocus="true"
            android:layout_weight="3.25"/>

        <Button
            android:id="@+id/clearAllBtn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1.75"
            android:layout_gravity="center"
            android:text="@string/clear"
            android:textSize="10sp"
            android:nextFocusDown="@+id/clearAllBtn"
            android:nextFocusUp="@+id/clearAllBtn"
            android:nextFocusLeft="@+id/clearAllBtn"
            android:nextFocusRight="@+id/clearAllBtn"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="@string/double_tap_to_remove_item"
        android:textColor="#ff353535"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listViewGetContainersToAudit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="60dp" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:minWidth="40dip"
            android:minHeight="40dip"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:text="@string/submit"
            android:textSize="12sp"
            android:textStyle="bold"
            android:nextFocusDown="@+id/submitBtn"
            android:nextFocusUp="@+id/submitBtn"
            android:nextFocusLeft="@+id/submitBtn"
            android:nextFocusRight="@+id/submitBtn"/>
    </RelativeLayout>
</LinearLayout>